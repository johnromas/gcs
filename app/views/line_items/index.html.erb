<h1>Listing line_items</h1>

<table>
  <thead>
    <tr>
      <th>Billing</th>
      <th>Quantity</th>
      <th>Date</th>
      <th>Cpt code</th>
      <th>Description</th>
      <th>Unit price</th>
      <th>Total</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.billing %></td>
        <td><%= line_item.quantity %></td>
        <td><%= line_item.date %></td>
        <td><%= line_item.cpt_code %></td>
        <td><%= line_item.description %></td>
        <td><%= line_item.unit_price %></td>
        <td><%= line_item.total %></td>
        <td><%= link_to 'Show', line_item %></td>
        <td><%= link_to 'Edit', edit_line_item_path(line_item) %></td>
        <td><%= link_to 'Destroy', line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

