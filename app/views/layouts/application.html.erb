<!DOCTYPE html>
<html>
<head>
  <title>Gcs</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
</head>
<body>
    <div class="container">
  
    <%= navbar fluid: true, position: :static do %>
      <%= vertical do %>
        <%= link_to 'GCS', root_path %>
      <% end %>
      <% if current_user %>
        <%= horizontal do %>
          <%= nav class: 'navbar-left' do %>
            <%= link_to 'Dashboard', dashboard_path %>
            <%= link_to 'Referrals', claims_path %>
            <%= link_to 'Insurance Co.', insurance_companies_path %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Contacts <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <%= link_to 'Doctors', doctors_path %>
                  <%= link_to 'Claimants', claimants_path %>
                  <%= link_to 'Adjusters', adjustors_path %>
                  <%= link_to 'Attorneys', attorneys_path %>
                </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Misc <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <%= link_to "Documents", documents_path %>
                </ul>
            </li>
          <% end %>
          <%= nav class: 'navbar-right' do %>
            <%= link_to "Hi, #{current_user.first_name}", "#" %>
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
          <% end %>
        <% end %>
      <% else %>
        <%= horizontal do %>
          <%= nav class: 'navbar-right' do %>
            <%= link_to "Home", root_path %>
            <%= link_to "Sign In", new_user_session_path %>
          <% end %>
        <% end %>     
      <% end %>
    <% end %>

    <% if flash[:notice] %>
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice] %>
      </div>
    <% elsif flash[:error] %>
      <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:error] %>
      </div>
    <% elsif flash[:alert] %>
      <div class="alert alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:alert] %>
      </div>
    <% end %>

		<%= yield %>
	
	</div>

</body>
</html>
