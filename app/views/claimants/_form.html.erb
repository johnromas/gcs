<%= bootstrap_form_for(@claimant) do |f| %>
  <% if @claimant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@claimant.errors.count, "error") %> prohibited this claimant from being saved:</h2>

      <ul>
      <% @claimant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.collection_select(:state_id, State.all, :id, :name, {prompt: 'Select State'}) %>
  </div>
  <div class="field">
    <%= f.text_field :zip %>
  </div>
  <div class="field">
    <%= f.phone_field :phone, class: "phone-input" %>
  </div>
  <div class="field">
    <%= f.phone_field :mobile, class: "phone-input" %>
  </div>  
  <div class="field">
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.text_field :ssn, label: "SSN", class: "ssn-input" %>
  </div>
  <div class="field">
    <%= f.date_field :dob, label: "DOB" %>
  </div>
  <div class="field">
    <%= f.date_field :gender%>
  </div>
  <div class="field">
    <%= f.text_area :notes %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
