<h1 class="page-header">Claims</h1>

<table id="claims-index" class="table">
  <thead>
    <tr>
      <th>Claim #</th>
      <th>Claimant</th>
      <th>Insurance Company</th>
      <th>Adjustor</th>
      <th>Attorney</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @claims.each do |claim| %>
    <tr>
      <td><%= link_to claim.number, claim %></td>
      <td><%= claim.claimant.full_name unless claim.claimant == nil %></td>
      <td><%= claim.insurance_company.name unless claim.insurance_company == nil %></td>
      <td><%= claim.adjustor.full_name unless claim.adjustor == nil %></td>
      <td></td>
      <td>
        <%= link_to 'Edit', edit_claim_path(claim) %> |
        <%= link_to 'Delete', claim, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>


<br>

<%= modal title: 'Add a Claim', button: {class: "btn btn-primary"} do %>
  <%= render 'form' %>
<% end %>
